// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  nickname  String   @unique
  bio       String
  avatar    String?
  loginCode String?
  posts     Post[]
  createdAt DateTime @default(now())
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  category  Category @default(FREE)
  open      Boolean
  createdAt DateTime @default(now())
}

enum Category {
  POEM
  NOVEL
  REVIEW
  FREE
  ESSAY
  RELATIONSHIP
}
