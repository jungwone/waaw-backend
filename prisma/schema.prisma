generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  uuid      String    @unique @default(uuid())
  email     String    @unique
  name      String?
  nickname  String    @unique
  bio       String
  avatar    String?
  intro     String?   @default("")
  loginCode String?
  createdAt DateTime  @default(now())
  posts     Post[]
  like      Like[]
  comments  Comment[]
  replies   Reply[]
}

model Post {
  id        Int       @id @default(autoincrement())
  uuid      String    @unique @default(uuid())
  title     String
  content   String
  authorId  String
  author    User      @relation(fields: [authorId], references: [uuid])
  open      Boolean
  category  Category  @default(FREE)
  fileUrl   String?   @default("")
  likes     Like[]
  likeCount Int       @default(0)
  createdAt DateTime  @default(now())
  comments  Comment[]
}

model Like {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [uuid])
  post      Post     @relation(fields: [postId], references: [uuid])
  postId    String
  userId    String
  createdAt DateTime @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  uuid      String   @unique @default(uuid())
  content   String
  post      Post     @relation(fields: [postId], references: [uuid])
  postId    String
  user      User     @relation(fields: [userId], references: [uuid])
  userId    String
  replies   Reply[]
  createdAt DateTime @default(now())
}

model Reply {
  id        Int      @id @default(autoincrement())
  uuid      String   @unique @default(uuid())
  comment   Comment  @relation(fields: [commentId], references: [uuid])
  commentId String
  user      User     @relation(fields: [userId], references: [uuid])
  userId    String
  createdAt DateTime @default(now())
}

enum Category {
  POEM
  NOVEL
  REVIEW
  FREE
  ESSAY
  RELATIONSHIP
}
